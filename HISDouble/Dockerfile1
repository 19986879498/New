#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:5.0-buster-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443
CMD ["dotnet", "HISDouble.dll"]

#设置时区（部署docker必须加上去）
ENV TZ=Asia/Shanghai
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

FROM mcr.microsoft.com/dotnet/sdk:5.0-buster-slim AS build
WORKDIR /src
COPY ["HISDouble/HISDouble.csproj", "HISDouble/"]
RUN dotnet restore "HISDouble/HISDouble.csproj"
COPY . .
WORKDIR "/src/HISDouble"
RUN dotnet build "HISDouble.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "HISDouble.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "HISDouble.dll"]